<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:list_btn"
        ohos:height="45vp"
        ohos:width="match_parent"
        ohos:background_element="$graphic:capsule_button_element.xml"
        ohos:margin="8vp"
        ohos:text="列表样式"
        ohos:text_size="18fp"/>

    <Button
        ohos:id="$+id:dialog_btn"
        ohos:height="45vp"
        ohos:width="match_parent"
        ohos:background_element="$graphic:capsule_button_element.xml"
        ohos:margin="8vp"
        ohos:text="自定义对话框"
        ohos:text_size="18fp"/>

    <Button
        ohos:id="$+id:notify_btn"
        ohos:height="45vp"
        ohos:width="match_parent"
        ohos:background_element="$graphic:capsule_button_element.xml"
        ohos:margin="8vp"
        ohos:text="消息通知"
        ohos:text_size="18fp"/>

    <Button
        ohos:id="$+id:sliding_drawer_btn"
        ohos:height="45vp"
        ohos:width="match_parent"
        ohos:background_element="$graphic:capsule_button_element.xml"
        ohos:margin="8vp"
        ohos:text="上拉抽屉"
        ohos:text_size="18fp"/>

</DirectionalLayout>